<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Main Menu"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="34dp" />

    <Button
        android:id="@+id/viewModeButton"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:text="View Your Drawings"
        android:visibility="gone" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <Button
        android:id="@+id/drawModeButton"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:text="make a new drawing"
        android:visibility="visible" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <Button
        android:id="@+id/portfolioButton"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:text="View Your Drafts" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:text="Logout and Exit" />

</LinearLayout>